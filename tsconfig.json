{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2020"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": "./",
      "paths" : {
        "*" : [
          "scr/*"
        ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__"
  ]
}
